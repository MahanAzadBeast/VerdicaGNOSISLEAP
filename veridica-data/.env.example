# Veridica Data Pipeline Environment Variables

# API Keys
OPENFDA_API_KEY=your_openfda_api_key_here

# API Base URLs
CLINICALTRIALS_BASE=https://clinicaltrials.gov/api/v2
OPENFDA_BASE=https://api.fda.gov/drug/drugsfda.json
CHEMBL_BASE=https://www.ebi.ac.uk/chembl/api/data
PUBCHEM_BASE=https://pubchem.ncbi.nlm.nih.gov/rest/pug
UNICHEM_BASE=https://www.ebi.ac.uk/unichem/rest

# Rate Limiting
HTTP_TIMEOUT=30
MAX_QPS=5
CHEMBL_MAX_QPS=10
PUBCHEM_MAX_QPS=5
CLINICALTRIALS_MAX_QPS=3

# Data Processing
BATCH_SIZE=1000
MAX_RETRIES=3
CACHE_ENABLED=true
CACHE_TTL_HOURS=24

# Temporal Guards
DEFAULT_CUTOFF_DATE=2017-12-31
APPROVAL_CUTOFF_DATE=2017-12-31
CLINICAL_CUTOFF_DATE=2018-06-30

# Quality Control
MIN_MOLECULAR_WEIGHT=50
MAX_MOLECULAR_WEIGHT=2000
MIN_SMILES_LENGTH=5
MAX_SMILES_LENGTH=500

# Output Settings
OUTPUT_FORMAT=parquet
COMPRESSION=snappy
DECIMAL_PRECISION=4

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s